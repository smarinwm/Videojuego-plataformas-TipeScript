{"code":"import { __extends } from \"tslib\";\r\nimport Constantes from '../constantes';\r\nvar HUD = /** @class */ (function (_super) {\r\n    __extends(HUD, _super);\r\n    function HUD() {\r\n        return _super.call(this, 'HUD') || this;\r\n    }\r\n    HUD.prototype.init = function (data) {\r\n        this.width = this.cameras.main.width;\r\n        this.height = this.cameras.main.height;\r\n        this.nombreNivel = data.nombreNivel;\r\n    };\r\n    HUD.prototype.create = function () {\r\n        if (this.sys.game.device.input.touch) {\r\n            this.crearControles();\r\n        }\r\n        this.nivel = this.scene.get(this.nombreNivel);\r\n        this.nivel.events.on(Constantes.EVENTOS.VIDAS, this.actualizaVidas, this);\r\n        this.nivel.events.on(Constantes.EVENTOS.PUNTUACION, this.actualizaPuntuacion, this);\r\n        this.nivel.events.on(Constantes.EVENTOS.RELOJ, this.actualizaReloj, this);\r\n        this.nivel.events.on(Constantes.EVENTOS.RECOLECTAR, this.actualizaRecolectar, this);\r\n        this.vidasTxt = this.add.bitmapText(20, 20, Constantes.FUENTES.BITMAP, Constantes.HUD.VIDAS + this.registry.get(Constantes.REGISTRO.VIDAS), 20);\r\n        this.cestaImg = this.add.image(20, 50, Constantes.HUD.CESTA).setOrigin(0);\r\n        this.recolectarTxt = this.add.bitmapText(60, 55, Constantes.FUENTES.BITMAP, this.registry.get(Constantes.REGISTRO.OBJETOSRECOLECTAR), 20);\r\n        this.puntuacionTxt = this.add.bitmapText(this.width - 100, 20, Constantes.FUENTES.BITMAP, '000', 20);\r\n        this.relojTxt = this.add.bitmapText(this.width / 2, 20, Constantes.FUENTES.BITMAP, '05:00', 20);\r\n    };\r\n    HUD.prototype.crearControles = function () {\r\n        var _this = this;\r\n        this.input.addPointer(2);\r\n        this.controlIzda = this.add.sprite(100, 0, Constantes.CONTROL.IZQUIERDA)\r\n            .setInteractive();\r\n        this.controlDcha = this.add.sprite(350, 0, Constantes.CONTROL.DERECHA)\r\n            .setInteractive();\r\n        this.controlSalto = this.add.sprite(1200, 0, Constantes.CONTROL.SALTO)\r\n            .setInteractive();\r\n        this.controlIzda.on('pointerdown', function () {\r\n            _this.nivel.jugador.controlIzda = true;\r\n        });\r\n        this.controlIzda.on('pointerup', function () {\r\n            _this.nivel.jugador.controlIzda = false;\r\n        });\r\n        this.controlIzda.on('pointerout', function () {\r\n            _this.nivel.jugador.controlIzda = false;\r\n        });\r\n        this.controlDcha.on('pointerdown', function () {\r\n            _this.nivel.jugador.controlDcha = true;\r\n        });\r\n        this.controlDcha.on('pointerup', function () {\r\n            _this.nivel.jugador.controlDcha = false;\r\n        });\r\n        this.controlDcha.on('pointerout', function () {\r\n            _this.nivel.jugador.controlDcha = false;\r\n        });\r\n        this.controlSalto.on('pointerdown', function () {\r\n            _this.nivel.jugador.controlSalto = true;\r\n        });\r\n        this.controlSalto.on('pointerup', function () {\r\n            _this.nivel.jugador.controlSalto = false;\r\n        });\r\n        this.controlSalto.on('pointerout', function () {\r\n            _this.nivel.jugador.controlSalto = false;\r\n        });\r\n        var controlContainer = this.add.container(50, 390);\r\n        controlContainer.add([\r\n            this.controlIzda,\r\n            this.controlDcha,\r\n            this.controlSalto\r\n        ]);\r\n        controlContainer\r\n            .setScale(.6)\r\n            .setAlpha(0.8)\r\n            .setScrollFactor(0)\r\n            .setDepth(5);\r\n    };\r\n    HUD.prototype.actualizaVidas = function () {\r\n        this.vidasTxt.text = Constantes.HUD.VIDAS + this.registry.get(Constantes.REGISTRO.VIDAS);\r\n    };\r\n    HUD.prototype.actualizaPuntuacion = function () {\r\n        this.puntuacionTxt.text = Phaser.Utils.String.Pad(this.registry.get(\"puntuacion\"), 3, '0', 1);\r\n    };\r\n    HUD.prototype.actualizaReloj = function () {\r\n        this.relojTxt.text = this.registry.get(Constantes.REGISTRO.RELOJ);\r\n    };\r\n    HUD.prototype.actualizaRecolectar = function () {\r\n        this.recolectarTxt.text = this.registry.get(Constantes.REGISTRO.OBJETOSRECOLECTAR);\r\n    };\r\n    return HUD;\r\n}(Phaser.Scene));\r\nexport default HUD;\r\n","references":["/home/smm/Documentos/Pharser/videojuego/v10/src/constantes.ts","/home/smm/Documentos/Pharser/videojuego/v10/src/escenas/manejadornivel.ts"]}
